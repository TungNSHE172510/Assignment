    <servlet>
        <servlet-name>DeleteControl</servlet-name>
        <servlet-class>controller.DeleteControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddControl</servlet-name>
        <servlet-class>controller.AddControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManufacturerControl</servlet-name>
        <servlet-class>controller.ManufacturerControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadProductControl</servlet-name>
